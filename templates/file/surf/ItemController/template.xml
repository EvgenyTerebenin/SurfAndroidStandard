<?xml version="1.0"?>
<template
    format="1"
    revision="1"
    name="ItemController"
    description="Creating ItemController for EasyAdapter ">

    <category value="Surf" />
    <formfactor value="ItemController" />

    <parameter
        id="nameController"
        name="Controller name without postfix"
        type="string"
        constraints="class|nonempty"
        default=""
        help="Имя контроллера"/>
    
    <parameter
        id="typeController"
        name="Controller type"
        type="enum"
        default="1">
        <option id="1" >Bindable</option>
        <option id="2" >NoData</option>
    </parameter>

    <parameter
        id="nameTypeData"
        name="Тип данных в контроллере"
        type="string"
        constraints="class|nonempty"
        default=""
        help="Тип данных"
        visibility="typeController='1'"/>

    <parameter
        id="hasListener"
        name="Add Listener"
        type="boolean"
        default="true"
        help="Создает для контроллера интерфейс Listener и поле"/>

    <parameter
        id="generateLayout"
        name="Add Layout"
        type="boolean"
        default="true"
        help="Создает для контроллера xml разметку"/>

    <parameter
        id="nameRes"
        name="Layout file name"
        type="string"
        suggest="${classToResource(nameController)}_layout"
        constraints="layout|unique"
        visibility="generateLayout"
        help="Имя файла, где будет содержаться разметка для ViewHolder'а" />
    

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />
     

</template>
