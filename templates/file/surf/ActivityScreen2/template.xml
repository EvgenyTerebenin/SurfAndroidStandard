<?xml version="1.0"?>
<template
    format="1"
    revision="1"
    name="ActivityScreen"
    description="Создание экрана Activity">

    <category value="SurfStudio" />
    <formfactor value="ScreenActivity" />
    
    <parameter
        id="className"
        name="Наименование экрана (без окончания)"
        type="string"
        constraints="class|nonempty"
	    default="" />

    <parameter
        id="layoutName"
        name="Наименование файла разметки"
        type="string"
	    suggest="${activityToLayout(className)}"
        constraints="layout|unique|nonempty" />

    <parameter
        id="typeView"
        name="Тип экрана"
        type="enum"
        default="1">
        <option id="1">BaseHandleableErrorActivityView</option>
        <option id="2" >BaseRenderableHandleableErrorActivityView</option>
        <option id="3" >BaseLdsActivityView</option>
        <option id="4" >BaseLdsSwrActivityView</option>
	    <option id="5" >BaseLdsSwrPgnActivityView</option>
    </parameter>

    <parameter
        id="typeRoute"
        name="Тип маршрута экрана"
        type="enum"
        default="1">
        <option id="1">ActivityRoute</option>
        <option id="2" >ActivityWithParamsRoute</option>
        <option id="3" >ActivityWithResultRoute</option>
        <option id="4" >ActivityWithParamsAndResultRoute</option>
    </parameter>

    <parameter
        id="nameClassRoute"
        name="Тип результата экрана"
        type="string"
        constraints="class"
        help="Использовать ScreenModel"
        visibility="typeRoute=='3' || typeRoute=='4'" />

    <parameter
        id="isUseScreenModel"
        name="Сгенерировать ScreenModel"
        type="boolean"
        default="false"
        help="Использовать ScreenModel"
        visibility="typeView!='1'" />

    <parameter
        id="isUseToolbar"
        name="Сгенерировать Toolbar"
        type="boolean"
        default="false"
        help="Использовать на экране Toolbar" />

    <parameter
        id="isUseRecyclerView"
        name="Сгенерировать RecyclerView"
        type="boolean"
        default="false"
        help="Использовать на экране RecyclerView" /> 

    <parameter
        id="isUseController"
        name="Сгенерировать Controller"
        type="boolean"
        default="false"
        help="Сгенерировать Controller"
        visibility="isUseRecyclerView" /> 

    <parameter
            id="nameController"
            name="Имя контроллера"
            type="string"
            constraints="class|nonempty"
            default=""
            help="Имя контроллера"
            visibility="isUseController"/>
    <parameter
        id="typeController"
        name="Тип контроллера"
        type="enum"
        default="1"
        visibility="isUseController">
        <option id="1" >BindableItemController</option>
        <option id="2" >NoDataItemController</option>
    </parameter>

    <parameter
            id="nameTypeData"
            name="Тип данных в Controller'е"
            type="string"
            constraints="class"
            default=""
            help="Тип данных"
            visibility="isUseController"/>

    <parameter
        id="nameRes"
        name="Наименование файла разметки Controller'а"
        type="string"
        suggest="${classToResource(nameController)}_layout"
        constraints="layout|unique"
        help="Имя файла, где будет содержаться разметка для ViewHolder'а"
        visibility="isUseController" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />
     

</template>
