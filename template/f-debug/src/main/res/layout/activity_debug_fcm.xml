<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fcm_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding"
            android:textIsSelectable="true" />

        <Button
            android:id="@+id/copy_fcm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copy_fcm_btn_text" />
    </LinearLayout>

    <ru.surfstudio.standard.base_ui.placeholder.PlaceHolderView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:pvEmptyTitle="@string/pv_empty_text"
        app:pvEmptyButtonText="@string/pv_empty_btn_text" />
</LinearLayout>